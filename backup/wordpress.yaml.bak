---
- name: Deploy Wordpress
  hosts: all
  become: yes
  vars_files:
    - /vagrant/variables.yaml
    
  tasks:
    - name: Update & Upgrade the System
      apt:
        update_cache: yes
        upgrade: yes    
    
    - name: Install LEMP Packages
      apt:
        name:
            - nginx
            - mysql-server
            - php7.4-cli
            - php7.4-fpm
            - php7.4-mysql
            - php7.4-json
            - php7.4-opcache
            - php7.4-mbstring
            - php7.4-xml
            - php7.4-gd
            - php7.4-curl
            
    - name: Allow NGINX on Firewall   
      ufw:
        rule: allow
        name: "Nginx Full"
    
    - name: Copy Nginx config       
      copy:
        src: "/vagrant/wordpressCfg.conf.j2"
        dest: "/etc/nginx/sites-available"
        
    - name: Symbolic link on Wordpress nginx configuration file      
      file:
        src: "/etc/nginx/sites-available/wordpressCfg.conf.j2"
        dest: "/etc/nginx/sites-enabled/wordpressCfg.conf"
        state: link
        
    - name: Unlink Default nginx config      
      file:
        path: /etc/nginx/sites-enabled/default
        state: absent
        
    - name: Create Wordpress Database   
      shell: 'mysql < wpDB.sql'
      args:
        chdir: /vagrant/
    
    - name: Restart MySQL  
      service:
        name: mysql
        state: restarted
    #- name: Download Wordpress        
    #  get_url:
    #    url: https://wordpress.org/latest.tar.gz
    #    dest: /var/www/
        
    - name: Extract Wordpress file        
      unarchive:
        src: "{{ url_wordpress }}"
        dest: "/var/www/"
        remote_src: yes
        
    - name: Copy wordpress config php file (wp database connection)        
      copy:
        src: "/vagrant/wp-config.php.j2"
        dest: "/var/www/{{ wp_root_dir }}/wp-config.php"
        force: yes
    
    - name: Setup owner and group privileges to www-data and 755 permissions.       
      file:
        path: /var/www/{{ wp_root_dir }}
        state: directory
        recurse: yes
        owner: www-data
        group: www-data
        mode: 0755
            
    - name: Download WP-Cli file      
      get_url:
        url: "{{ url_wpcli }}"
        dest: /usr/local/bin/wp
        mode: 0755
    
    #- name: Install WP-CLI     
    #  shell: 'wp core install --url="{{ wp_iphost }}" --title="{{ title }}" --admin_user="{{ wp_admin_user }}" --admin_email="{{ wp_admin_mail }}" --admin_password="{{ wp_admin_password }}" --path="/var/www/{{ wp_root_dir }}" --allow-root'
    - name: Install WP-CLI
      command: wp core install --url="{{ wp_iphost }}" --title="{{ title }}" --admin_user="{{ wp_admin_user }}" --admin_email={{ wp_admin_mail }} --admin_password="{{ wp_admin_password }}" --path="/var/www/{{ wp_root_dir }}" --allow-root
      args:
        chdir: "/var/www/{{ wp_root_dir }}"
      
    - name: Install Theme     
      shell: 'wp theme install twentynineteen --activate --path="/var/www/{{ wp_root_dir }}" --allow-root'
    
    - name: Restart Nginx  
      service:
        name: nginx
        state: restarted